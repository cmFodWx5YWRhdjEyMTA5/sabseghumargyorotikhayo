<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".extras.side_business.SideIncome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/side_income_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme"
                android:text="@string/side_income"
                android:textAlignment="center"
                android:textColor="@color/title_color"
                android:textSize="@dimen/title_text" />

            <EditText
                android:textColor="@color/edit_text"
                        android:id="@+id/side_income_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/similar_margin"
                android:ems="10"
                android:fontFamily="@font/acme"
                android:hint="@string/amount"
                android:inputType="numberDecimal"
                android:textSize="@dimen/normal_text" />

            <AutoCompleteTextView
                android:id="@+id/side_income_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/similar_margin"
                android:ems="10"
                android:fontFamily="@font/acme"
                android:hint="@string/remark"
                android:inputType="textPersonName"
                android:textSize="@dimen/normal_text" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/choose_date"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/similar_margin"
                    android:layout_weight="1"
                    android:fontFamily="@font/acme"
                    android:onClick="dateChooserBt"
                    android:text="@string/choose_date"
                    android:textSize="@dimen/normal_text" />

                <TextView
                    android:id="@+id/show_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/similar_margin"
                    android:layout_weight="1"
                    android:fontFamily="@font/acme"
                    android:text="@string/no_date_selected"
                    android:textColor="@color/simple_text_view_color"
                    android:textSize="@dimen/normal_text" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/history_bt"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/similar_margin"
                    android:fontFamily="@font/acme"
                    android:onClick="HistoryBt"
                    android:text="@string/history"
                    android:textSize="@dimen/normal_text" />
            </LinearLayout>

            <Button
                android:id="@+id/edit_crop_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/similar_margin"
                android:fontFamily="@font/acme"
                android:onClick="SaveBt"
                android:text="@string/save"
                android:textSize="@dimen/normal_text" />

            <Button
                android:id="@+id/edit_crop_cancel_button"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/similar_margin"
                android:fontFamily="@font/acme"
                android:onClick="CancelBt"
                android:text="@string/cancel"
                android:textSize="@dimen/normal_text" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>